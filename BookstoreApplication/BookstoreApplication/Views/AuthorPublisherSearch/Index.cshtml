@model List<BookstoreApplication.Models.sp_searchauthororpublisher1_Result>
@using (Html.BeginForm("Index", "AuthorPublisherSearch", FormMethod.Get))
{
    <b>Search Option:</b>@Html.RadioButton("option", "Author")<text>Author</text>@Html.RadioButton("option", "Publisher")<text>Publisher</text>
    @Html.TextBox("search")<input type="submit" name="submit" value="Search" />
}
    <table class="table">
        <tr>
            <th>Author</th>
            <th>Publisher</th>
            <th>Title of the book</th>
            <th>Title of the magazine</th>
        </tr>
        <tr>
            @foreach (var row in Model)
            {
                <td>@row.Name_of_Author</td>
                <td>@row.Name_of_Publisher</td>
                <td>@row.Title_of_Book</td>
                <td>@row.Title_of_Magazine</td>
            }
        </tr>
    </table>

